<ul>
    <li>Name: <%= @camper.name %></li>
    <li>Age: <%= @camper.age %></li>
    <li>Activities: 
        <ul>
            <% if @camper.activities.empty? %>
            <li><i> No activities yet</i></li>
            <% else %>
                <% (0..23).each do |t| %>
                    <% if @camper.activity_at(t) %>
                    <li><%= @camper.activity_at(t) %> at <strong><%= t %>:00</strong></li>
                    <% end %>
                <% end %>
            <% end %>
        </ul>
    </li>
</ul>